<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_game_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.eskilsund.etchess3d.etchess3d.game_menu"
    tools:showIn="@layout/activity_game_menu">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ToggleButton
            android:textOn="Continue previous game"
            android:textOff="Continue previous game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/load_game" />

        <ToggleButton
            android:textOn="Player is white"
            android:textOff="Player is white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cpu_white" />

        <ToggleButton
            android:textOn="CPU is black"
            android:textOff="CPU is black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cpu_black" />

        <ToggleButton
            android:text="CPU difficulty medium"
            android:textOff="CPU difficulty medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cpu_difficulty" />

    </LinearLayout>

</RelativeLayout>
